{
    "manifest_version": 3,
    "name": "LeetCode Difficulty Hider",
    "version": "1.0",
    "description": "Hide difficulty labels on LeetCode problems",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://leetcode.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action" :{
        "default_popup" :"popup.html",
        "default_icon" :{
            "16" :"icon.png",
            "48":"icon.png",
            "128":"icon.png"
        }
    },
    "icons":{
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
    }
   
}